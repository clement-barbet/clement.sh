---
import { type CollectionEntry, getCollection } from "astro:content";
import NorwegianLessonPost from "../../layouts/NorwegianLessonPost.astro";

export async function getStaticPaths() {
  const posts = await getCollection("norwegian");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"norwegian">;

const post = Astro.props;
const { Content } = await post.render();
---

<NorwegianLessonPost {...post.data}>
  <Content />
</NorwegianLessonPost>
